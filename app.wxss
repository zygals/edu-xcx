}

.plans image {
  width: 230rpx;
  height: 217rpx;
  display: block;
  margin: 10rpx auto;
}

.plans .font {
  font-size: 24rpx;
  text-align: center;
}

.plans_bottom {
  border-bottom: none;
}

.plans_right {
  border-right: none;
}

.heart .ren {
