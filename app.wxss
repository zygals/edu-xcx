/* 全局样式 */

view, button, text {
  font-family: '微软雅黑';
}

/*首页*/

.slide-image {
  width: 100%;
  height: 340rpx;
}

/* 导航区样式 */

.content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 85%;
  margin: 0 auto;
}

.index_center {
  width: 187.5rpx;
  height: 262rpx;
}

.index_center image {
  width: 121rpx;
  height: 123rpx;
  display: block;
  margin: 48rpx auto;
  margin-bottom: 2rpx;
}

.index_center view {
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  letter-spacing: 1rpx;
}

/* 中间内容区 */

.wrap {
  width: 96%;
  margin: 0 auto;
}

.boon_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.boon_top .nav-title {
  display: flex;
  margin-left: 23%;
}

.boon_top .heng {
  width: 100rpx;
  height: 2rpx;
  background: #ddd;
  margin: auto 0rpx;
}

.boon_top .size {
  font-size: 36rpx;
  line-height: 100rpx;
  margin: 0 25rpx;
  font-weight: bold;
}

.boon_top .more {
  line-height: 100rpx;
  font-size: 24rpx;
  color: #777;
}

/* 选课推荐模块  */

.recommend {
  display: flex;
  justify-content: center;
  text-align: center;
  overflow: hidden;
}

.recommend .college-pic {
  width: 50%;
  margin-bottom: 40rpx;
}

.recommend .college-pic image {
  width: 96%;
  height: 240rpx;
}

.recommend .college-pic .college {
  font-size: 28rpx;
  letter-spacing: 1rpx;
  line-height: 30rpx;
}

/* 课程报名模块 */

.course {
  border-top: 1rpx solid #ecedeb;
  overflow: hidden;
}

.course:last-child {
  border-bottom: 1rpx solid #ecedeb;
}

.course-pic {
  float: left;
}
.course-desc {
  margin-left: 225rpx;
}
.course-pic image {
  width: 180rpx;
  height: 210rpx;
  margin: 30rpx 30rpx 30rpx 0;
}

.course-name {
  float: left;
  margin-top: 30rpx;
}

.tenant {
  font-size: 28rpx;
}

.price {
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fe9727;
}

.course-time {
  float: right;
  font-size: 24rpx;
  margin-top: 40rpx;
  color: #5a5a5a;
}

.course-boon {
  padding-bottom: 50rpx;
}

/* 专业解析模块 */

.read-desc {
  margin-left: 8rpx;
}

.read-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  line-height: 50rpx;
  text-indent: 22rpx;
}

.read-content {
  position: relative;
  font-size: 24rpx;
  font-weight: normal;
  margin-bottom: 20rpx;
  line-height: 45rpx;
  text-indent: 45rpx;
}

.read-time {
  text-align: right;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.read-more {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #50a1fd;
}

.read-boon {
  padding-bottom: 50rpx;
}

.boon_con {
  padding: 24rpx;
  margin-top: -24rpx;
}

.boon_inner {
  width: 361rpx;
  margin: 5rpx;
  height: 289rpx;
  background: #fff;
  text-align: center;
}

.boon_inner image {
  width: 199rpx;
  height: 160rpx;
  display: block;
  margin: 0 auto;
}

.boon_inner .font1 {
  font-size: 30rpx;
  color: #f3ae1a;
  margin: 30rpx 0 0 20rpx;
}

.boon_inner .font2 {
  font-size: 22rpx;
  margin: 20rpx 0 0 15rpx;
}

.height12 {
  width: 100%;
  height: 20rpx;
  background: #ecedeb;
  margin: 0 auto;
}

.gromm_top {
