.container{
  display: flex;
  flex-direction: column;
}
.zttitle{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 25rpx 0;
}
.timelai{
  width:100%;
  display: flex;
  flex-direction: row;
}
.timelai .time,.timelai .laiy{
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 12px;
}
.wzcon{
  width: 94%;
  height: auto;
  margin: 20rpx auto;
}
.wzcon image{
  width: 100%;
  height: 240rpx;
}
.wzcon .wzi{
  width: 100%;
  margin-top: 20rpx;
  text-indent: 2em;
