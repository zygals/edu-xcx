.wrap {
  width: 96%;
  margin: 0 auto;
}
.college-list {
  overflow: hidden;
}
.college-pic {
  float: left;
}
.college-pic image {
  width: 167rpx;
  height: 114rpx;
  margin: 30rpx 30rpx 30rpx 0;
}
.college-intro {
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  letter-spacing: 1rpx;
}
.college-name {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.location, .belong {
  margin-bottom: 20rpx;
}

.college-list {
  border-top: 1rpx solid #ecedeb;
}
.college-list:last-child {
  border-bottom: 1rpx solid #ecedeb;
}